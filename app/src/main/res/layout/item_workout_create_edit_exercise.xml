<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="6dp"
    android:orientation="horizontal"
    android:padding="6dp"
    android:weightSum="7">


    <TextView
        android:id="@+id/tvItemExerciseNameCreateEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textAlignment="center"
        tools:text="Ejercicio de muestra numero 1" />

    <TextView
        android:id="@+id/tvItemExerciseRepsCreateEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textAlignment="center"
        tools:text="12" />

    <TextView
        android:id="@+id/tvItemExerciseSetsCreateEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="2"
        android:textAlignment="center"
        tools:text="4" />

    <ImageButton
        android:id="@+id/btItemExerciseCancelExercise"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_weight="1"
        android:background="@android:color/transparent"
        android:src="@drawable/ic_cancel_exercise" />

</LinearLayout>